  <section id="data-table" aria-labelledby="table-heading">
    <h3 id="table-heading">Sample Data Table</h3>
    <p>The table below uses a caption and appropriate scope attributes for accessibility.</p>
    <table>
      <caption>Monthly subscription plan features comparison</caption>
      <thead>
        <tr>
          <th scope="col">Plan</th>
          <th scope="col">Price (USD)</th>
          <th scope="col">Max Users</th>
          <th scope="col">Storage</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">Starter</th>
          <td>5</td>
          <td>1</td>
          <td>5 GB</td>
        </tr>
        <tr>
          <th scope="row">Team</th>
          <td>15</td>
          <td>5</td>
          <td>50 GB</td>
        </tr>
        <tr>
          <th scope="row">Business</th>
          <td>45</td>
          <td>Unlimited</td>
          <td>500 GB</td>
        </tr>
      </tbody>
    </table>
